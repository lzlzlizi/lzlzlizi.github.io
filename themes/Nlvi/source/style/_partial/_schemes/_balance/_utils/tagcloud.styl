.tagcloud
  display none
  z-index: 500
  width 100%
  min-height 120px
  text-align center
  box-sizing border-box
  background-color rgba(#fff, .9)
  transition all .3s ease-out
  padding yard 0
  margin yard 0
  +mobile()
    display none

  .tagcloud-inner
    display flex
    justify-content center
    align-items center
    flex-flow row wrap
    min-height inherit
    width 100%
    height 100%
    a
      width (100% / 3)
      text-decoration none
      color $theme-color-main
      &:before
        content: '#'
      &:hover
        text-decoration underline
