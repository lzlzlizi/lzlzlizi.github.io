.progress
    .progress-inner
        display block
        position fixed
        top 0
        left 0
        background-color transparent
        height 3px
        width 100%
        &:before
            content ''
            height inherit
            position absolute
            width auto
            will-change left right
            background $color-main
            -webkit-animation indeterminate 2.2s ease-out infinite
            animation indeterminate 2.2s ease-out infinite
        &:after
            content ''
            height inherit
            position absolute
            width auto
            will-change left right
            background $color-main
            -webkit-animation indeterminate-short 2.2s ease-out infinite
            animation indeterminate-short 2.2s ease-out infinite

@keyframes indeterminate
    from
        left: -90%
        right: 100%
    60%
        left: -90%
        right: 100%
    to
        left: 100%
        right: -35%

@keyframes indeterminate-short
    from
        left: -200%
        right: 100%
    60%
        left: 107%
        right: -8%
    to
        left: 107%
        right: -8%
